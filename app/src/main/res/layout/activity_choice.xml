<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context=".caterers.ChoiceActivity">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:fontFamily="monospace"
        android:text="You Wanna Search For"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/Black"
        android:textSize="29sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButtonP"
        android:layout_width="272dp"
        android:layout_height="139dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:background="@color/White"
        android:onClick="onClick"
        app:srcCompat="@drawable/ic_hello" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageButtonP"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:text="Palaces"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <ImageButton
        android:id="@+id/imageButtonC"
        android:layout_width="272dp"
        android:layout_height="139dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="99dp"
        android:background="@color/White"
        android:onClick="onClick"
        app:srcCompat="@drawable/ic_hy" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageButtonC"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:text="Caterers"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/Black"
        android:textSize="30sp"
        android:textStyle="bold|italic" />


</RelativeLayout>